	* {
		padding: 0;
		margin: 0;
		list-style: none;
	}
	
	body {
		font-size: 16px;
		font-family: Malgun Gothic;
	}
	/*头部、一级导航*/
	/* 个人头像*/
	
	.person {
		width: 532px;
		height: 185px;
		margin: 0 auto;
		overflow: hidden;
	}
	
	.person .personimg {
		width: 69px;
		height: 69px;
		margin: 60px auto 5px;
		overflow: hidden;
	}
	
	.person .sex {
		width: 532px;
		height: 34px;
		line-height: 34px;
		text-align: center;
		margin: 0 auto;
		display: block;
		font-size: 20px;
		color: #313232;
	}
	/*中间内容区域
			  个人头像描述*/
	
	.personcon {
		width: 533px;
		height: auto;
		margin: 0 auto;
	}
	
	.words {
		width: 533px;
		height: 135px;
		padding: 5px;
	}
	
	.words textarea {
		width: 522px;
		height: 135px;
		line-height: 25px;
		color: #313232;
		font-size: 14px;
		border: none;
		outline: none;
		resize: none;
		font-family: Malgun Gothic;
	}
	/*	  等级进度条*/
	
	.LV {
		width: 533px;
		height: 85px;
		margin: 0 auto;
		position: relative;
		overflow: hidden;
	}
	
	.LV .box1 {
		width: 533px;
		height: 8px;
		position: absolute;
		top: 0;
		background: #F2F2F2;
	}
	
	.box2 {
		width: 173px;
		height: 8px;
		position: absolute;
		top: 0;
		left: 0;
		background: #78879d;
	}
	
	.LV ul {
		width: 100%;
		height: 32px;
		margin-top: 15px;
	}
	
	.LV ul li {
		height: 32px;
		line-height: 32px;
		color: #abaaaa;
		font-size: 15px;
		margin-right: 58px;
		float: left;
	}
	
	.LV ul li:last-child {
		margin-right: 0;
	}
	/* 所选项*/
	
	.check {
		margin: 0 auto;
		margin-bottom: 40px;
	}
	
	.check2 {
		margin: 0 auto;
	}
	
	.check p,
	.check2 p {
		height: 25px;
		line-height: 25px;
		text-align: center;
		color: rgba(141, 141, 141, 1);
	}
	
	.listcon p {
		color: #313232;
	}
	
	.checkcon,
	.listcon {
		padding-top: 30px;
		border-top: 1px solid #E6E6E6;
	}
	
	.check2 ul {
		width: 370px;
		margin: 0 auto;
	}
	
	.check2 .listcon li {
		width: 390px;
		height: 19px;
		margin-top: 35px;
	}
	
	.check2 .listcon li p {
		float: right;
	}
	
	.check2 ul li span img {
		width: 19px;
		height: 16px;
		margin-right: 10px;
	}
	
	.check2 ul li span {
		display: inline-block;
	}
	
	.checkcon ul {
		/*padding-left: 183px;*/
		margin: 0 auto;
		overflow: hidden;
	}
	
	.checkcon ul li {
		margin-left: 32px;
		margin-right: 32px;
		margin-bottom: 10px;
		height: 19px;
		line-height: 19px;
		float: left;
		text-align: right;
	}
	
	.check ul li span {
		display: inline-block;
		width: 19px;
		height: 16px;
		margin-right: 10px;
	}
	/*	信息message*/
	
	.message {
		height: 58px;
		width: 533px;
		margin: 0 auto;
		border-bottom: 1px solid #E6E6E6;
		padding-bottom: 12px;
		padding-bottom: 10px;
		overflow: hidden;
	}
	
	.message .messagecon {
		width: 374px;
		margin: 40px auto 0;
		height: 19px;
		position: relative;
	}
	
	.message p {
		float: left;
		height: 22px;
		font-size: 16px;
		text-align: left;
		color: rgba(171, 170, 170, 1);
	}
	
	.message span {
		outline: none;
		text-align: right;
		height: 19px;
		font-size: 16px;
		color: #313232;
		border: none;
		display: inline-block;
		float: right;
	}
	/************底部按钮***********/
	
	.footcon {
		width: 131px;
		height: 34px;
		text-align: center;
		line-height: 34px;
		background: url(../../../img/wszlm.png) no-repeat center;
		cursor: pointer;
		margin: 80px auto 55px;
		color: #FFFFFF;
	}
	
	.footcon:hover {
		background: url(../../../img/wszlx.png) no-repeat center;
	}